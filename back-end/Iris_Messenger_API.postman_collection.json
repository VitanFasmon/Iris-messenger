{
    "info": {
        "name": "Iris Messenger API",
        "description": "Complete API collection for testing Iris Messenger backend",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{jwt_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://127.0.0.1:8000/api",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "register"]
                        }
                    }
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.collectionVariables.set(\"jwt_token\", jsonData.token);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"alice\",\n  \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "login"]
                        }
                    }
                },
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/me",
                            "host": ["{{base_url}}"],
                            "path": ["me"]
                        }
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/auth/logout",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "logout"]
                        }
                    }
                },
                {
                    "name": "Refresh Token",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/auth/refresh",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "refresh"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Users",
            "item": [
                {
                    "name": "Search User by Username",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/users/bob",
                            "host": ["{{base_url}}"],
                            "path": ["users", "bob"]
                        }
                    }
                },
                {
                    "name": "Get User by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/users/id/2",
                            "host": ["{{base_url}}"],
                            "path": ["users", "id", "2"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Friends",
            "item": [
                {
                    "name": "Get Friends List",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/friends",
                            "host": ["{{base_url}}"],
                            "path": ["friends"]
                        }
                    }
                },
                {
                    "name": "Get Pending Requests",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/friends/pending",
                            "host": ["{{base_url}}"],
                            "path": ["friends", "pending"]
                        }
                    }
                },
                {
                    "name": "Send Friend Request",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/friends/3",
                            "host": ["{{base_url}}"],
                            "path": ["friends", "3"]
                        }
                    }
                },
                {
                    "name": "Accept Friend Request",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/friends/2/accept",
                            "host": ["{{base_url}}"],
                            "path": ["friends", "2", "accept"]
                        }
                    }
                },
                {
                    "name": "Remove Friend",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/friends/1",
                            "host": ["{{base_url}}"],
                            "path": ["friends", "1"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Messages",
            "item": [
                {
                    "name": "Get Chat History",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/messages/2",
                            "host": ["{{base_url}}"],
                            "path": ["messages", "2"]
                        }
                    }
                },
                {
                    "name": "Send Text Message",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"content\": \"Hello! This is a test message.\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/messages/2",
                            "host": ["{{base_url}}"],
                            "path": ["messages", "2"]
                        }
                    }
                },
                {
                    "name": "Send Message with Expiry",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"content\": \"This message will self-destruct in 5 minutes\",\n  \"delete_after\": 300\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/messages/2",
                            "host": ["{{base_url}}"],
                            "path": ["messages", "2"]
                        }
                    }
                },
                {
                    "name": "Send Message with File",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "content",
                                    "value": "Check out this file!",
                                    "type": "text"
                                },
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": []
                                },
                                {
                                    "key": "delete_after",
                                    "value": "600",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/messages/2",
                            "host": ["{{base_url}}"],
                            "path": ["messages", "2"]
                        }
                    }
                },
                {
                    "name": "Delete Message",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/messages/1",
                            "host": ["{{base_url}}"],
                            "path": ["messages", "1"]
                        }
                    }
                }
            ]
        }
    ]
}
